<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="Closet">
<!--	옷장 등록 -->
	<insert id="insert" parameterType="java.util.Map">
		insert into closet values(closet_seq.nextval,#{email},#{name},#{memo},#{pub},#{img})
	</insert>
<!-- 	옷장번호 가져오기 -->
	<select id="selectNoByEmail" resultType="kh.spring.dto.ClosetDTO">
		select * from closet where email = #{value} order by 1 desc
	</select>
<!-- 	선택한 옷장 정보 가져가기 -->
	<select id="selectByName" resultType="kh.spring.dto.ClosetDTO">
		select * from closet where name = #{value}
	</select>
	
	
</mapper>